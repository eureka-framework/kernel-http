{
  "name": "eureka/kernel-http",
  "description": "Kernel Http for Content PHP application. Use PSR-7, 15 & 17 to build an application.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Kernel\\Http\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Kernel\\Http\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",
    "ext-json": "*",

    "nyholm/psr7": "^1.5",
    "thecodingmachine/safe": "^1.3",

    "symfony/config": "^5.4",
    "symfony/dependency-injection": "^5.4",
    "symfony/finder": "^5.4",
    "symfony/routing": "^5.4",
    "symfony/yaml": "^5.4",

    "psr/log": "^1.1|^2.0|^3.0",
    "psr/cache": "^1.0|^2.0|^3.0",
    "psr/http-message": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",

    "eureka/component-http": "^5.0"
  },

  "require-dev": {
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.8",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/cache": "^v5.4"
  }
}
