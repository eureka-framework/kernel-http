{
  "name": "eureka/kernel-http",
  "description": "Kernel Http for Content PHP application. Use PSR-7, 15 & 17 to build an application.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Kernel\\Http\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Kernel\\Http\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-json": "*",
    "ext-filter": "*",

    "nyholm/psr7": "^1.8",

    "symfony/config": "^5.4||^6.4||^7.0",
    "symfony/dependency-injection": "^5.4||^6.4||^7.0",
    "symfony/finder": "^5.4||^6.4||^7.0",
    "symfony/routing": "^5.4||^6.4||^7.0",
    "symfony/yaml": "^5.4||^6.4||^7.0",

    "psr/log": "^1.1||^2.0||^3.0",
    "psr/cache": "^1.0||^2.0||^3.0",
    "psr/container": "^1.0||^2.0||^3.0",
    "psr/http-message": "^1.0||^2.0",
    "psr/http-factory": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",

    "eureka/component-http": "^5.3"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.49.0",
    "maglnet/composer-require-checker": "^4.7.1",
    "phpstan/phpstan": "^1.10.59",
    "phpstan/phpstan-phpunit": "^1.3.15",
    "phpstan/phpstan-strict-rules": "^1.5.2",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.10",
    "symfony/cache": "^5.4.35||^6.4.3||^7.0"
  }
}
